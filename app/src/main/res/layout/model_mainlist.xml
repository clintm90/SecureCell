<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:tag="@string/app_name">

    <TextView
        android:id="@+id/model_mainlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/model_mainlist_icon"
        android:layout_toRightOf="@+id/model_mainlist_icon"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingBottom="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:text="@string/noset"
        android:textColor="#333333"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/model_mainlist_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/model_mainlist_title"
        android:layout_alignStart="@+id/model_mainlist_title"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/model_mainlist_title"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:text="@string/noset"
        android:textColor="@android:color/tertiary_text_dark" />

    <ImageView
        android:id="@+id/model_mainlist_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/model_mainlist_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/model_mainlist_description"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/model_mainlist_title"
        android:layout_toRightOf="@+id/model_mainlist_title"
        android:paddingTop="10dp"
        android:text="@string/noset"
        android:textColor="@color/red" />

</RelativeLayout>